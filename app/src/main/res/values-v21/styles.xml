<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/holo_orange_dark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/themeColor</item>
        <item name="android:statusBarColor">@color/themeColor</item>
        <item name="android:navigationBarColor">@color/themeColor</item>
    </style>


    <!--通用的竖屏Activity主题-->
    <style name="ActivityTheme">
        <item name="android:label">@string/app_name</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:windowSoftInputMode">stateVisible|adjustPan</item>
    </style>
</resources>